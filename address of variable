#include <iostream>
using namespace std;

int g;   // global variable

int main() {
    int l;            // local variable
    int *h = new int; // heap variable

    cout << &g << " global" << endl;
    cout << &l << " stack" << endl;
    cout << h  << " heap" << endl;

    delete h;
    return 0;
}

#output
0x404154 global
0x7ffedc752e64 stack
0x315b72b0 heap
